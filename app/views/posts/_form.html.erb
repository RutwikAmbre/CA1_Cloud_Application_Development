<%= simple_form_for(post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.input :title, label: "Title", input_html: { style: "display: block" } %>
  </div>

  <div>
    <%= form.input :content, label: "Content", as: :text, input_html: { style: "display: block" } %>
  </div>

  <div>
    <%= form.input :slug, label: "Slug", input_html: { style: "display: block" } %>
  </div>

  <div>
    <%= form.button :submit %>
  </div>
<% end %>
